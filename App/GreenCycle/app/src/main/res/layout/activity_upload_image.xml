<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageLog.UploadImage"
    android:theme="@style/AppBackgroundColour">

    <!-- ImageView to display the selected image -->

    <!-- Button to choose an image -->
    <TextView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/back_button"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:clickable="true"
        android:focusable="true"
        android:theme="@style/DrawableTint" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="293dp"
        android:layout_marginTop="131dp"
        android:scaleType="centerCrop"
        android:src="@drawable/uploadicon"

        />

    <Button
        android:id="@+id/btnChooseImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/mid_green"
        android:text="Choose Image"
        app:cornerRadius="5dp" />

    <!-- Button to upload the image -->
    <Button
        android:id="@+id/btnUploadImage"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnChooseImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/mid_green"
        app:cornerRadius="5dp"
        android:text="Upload Image" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_below="@id/btnUploadImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/mid_green"
        android:text="Cancel"
        android:textSize="10dp"
        app:cornerRadius="5dp" />


</RelativeLayout>
