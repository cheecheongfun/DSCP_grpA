<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bottom_sheet"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:behavior_hideable="false"
    app:behavior_peekHeight="300dp"
    android:elevation="10dp"
    android:theme="@style/FeedingLogBottom">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="20dp"
            android:text="22 May"
            android:textSize="30sp"
            android:gravity="center"
            android:clickable="true"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/baseline_edit_calendar_24"
            android:layout_toEndOf="@id/date"
            android:layout_alignBottom="@+id/date"
            android:layout_alignTop="@id/date"
            android:layout_marginStart="10dp"
            android:theme="@style/DrawableTint"/>
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/greens"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="80dp"
        android:maxHeight="300dp">


        <ImageButton
            android:id="@+id/addGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:padding="6dp"
            app:tint="@color/textColour"
            android:src="@drawable/baseline_add_circle_outline_24" />

        <TextView
            android:id="@+id/greenText"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignTop="@id/addGreen"
            android:layout_alignBottom="@id/addGreen"
            android:layout_toEndOf="@id/addGreen"
            android:text="Greens"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="25dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/greenRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/greenText"
            android:layout_alignStart="@+id/addGreen"
            android:layout_marginBottom="10dp"
            android:theme="@style/Border"
            android:layout_marginEnd="5dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/browns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/greens"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="80dp"
        android:maxHeight="300dp">

        <ImageButton
            android:id="@+id/addBrown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:padding="6dp"
            app:tint="@color/textColour"
            android:src="@drawable/baseline_add_circle_outline_24" />

        <TextView
            android:id="@+id/brownText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/addBrown"
            android:layout_alignBottom="@id/addBrown"
            android:layout_toEndOf="@id/addBrown"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:text="Browns"
            android:textSize="25dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/brownRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/brownText"
            android:layout_alignStart="@+id/addBrown"
            android:layout_marginBottom="10dp"
            android:theme="@style/Border"
            android:layout_marginEnd="5dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/waterText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/browns"
        android:layout_alignStart="@id/browns"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:text="Water: "
        android:textSize="25dp"
        android:theme="@style/AppBackgroundColour"
        android:layout_alignBottom="@id/editWater"
        android:gravity="center"/>

    <EditText
        android:id="@+id/editWater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/browns"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/waterText"
        android:inputType="number"
        android:hint="input amount"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/notesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/waterText"
        android:text="Notes"
        android:layout_alignStart="@id/waterText"
        android:textSize="25dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/notesDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notesText"
        android:layout_alignStart="@id/notesText"
        android:layout_alignEnd="@id/browns"
        android:layout_marginEnd="5dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="start|top"
        android:inputType="text|textMultiLine"
        android:hint="Add notes"
        android:scrollbars="vertical"
        android:maxLines="7"/>

    <Button
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/notesDescription"
        android:text="Confirm"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/dark_green"
        />

</RelativeLayout>