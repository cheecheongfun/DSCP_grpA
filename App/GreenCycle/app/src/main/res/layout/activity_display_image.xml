<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageLog.DisplayImage"
    android:theme="@style/AppBackgroundColour">

    <ImageButton
        android:id="@+id/gallery"
        android:layout_width="46dp"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"

        android:backgroundTint="@color/transparent"
        app:srcCompat="@drawable/baseline_grid_view_24" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTanks"
        android:layout_width="match_parent"
        android:layout_height="548dp"
        android:layout_marginTop="150dp" />

    <ImageButton
        android:id="@+id/Compostcamera"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_gravity="end|top"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="0dp"
        android:backgroundTint="@color/transparent"
        app:srcCompat="@drawable/baseline_file_upload_24" />

    <TextView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/back_button"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:theme="@style/DrawableTint" />

    <ImageButton
        android:id="@+id/Calender"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_gravity="end|top"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="60dp"
        android:backgroundTint="@color/transparent"
        app:srcCompat="@drawable/outline_calendar_month_24" />

</FrameLayout>
