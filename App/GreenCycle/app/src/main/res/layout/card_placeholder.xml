<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_corner_mid_green"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    android:paddingTop="32dp"
    android:paddingBottom="32dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upcoming Feeding"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/top_rounded_dark_beige"
        android:gravity="center">

        <TextView
            android:id="@+id/scheduleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Schedule Name"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/refDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Reference Date"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/brownFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Brown Food"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/greenFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Green Food"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            android:gravity="center" />
    </LinearLayout>
</LinearLayout>
