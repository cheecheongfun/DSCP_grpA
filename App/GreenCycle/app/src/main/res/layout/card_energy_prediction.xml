<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_corner_mid_green"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="10dp"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/mid_green"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/mid_green"
            android:text="Energy Prediction Location"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/card_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:adjustViewBounds="true"
            android:background="@color/mid_green"
            android:src="@drawable/baseline_energy_savings_leaf_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/top_rounded_dark_beige"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_corner_mid_green"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/card_soe"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:gravity="center"
                android:padding="8dp"
                android:text="SOE"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/card_soe_energy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:gravity="center"
                android:padding="8dp"
                android:textSize="30sp"
                android:text=""
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_corner_mid_green"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/card_estate"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:gravity="center"
                android:padding="8dp"
                android:text="Estate"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/card_estate_energy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:gravity="center"
                android:padding="8dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="30sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
