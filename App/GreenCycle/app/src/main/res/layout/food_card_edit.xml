<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/foodCardEdit"
    android:theme="@style/AppBackgroundColour"
    android:backgroundTint="@color/transparent">

    <CheckBox
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/editFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/check"
        android:textSize="20sp"
        android:hint="Food"
        android:visibility="visible"
        android:layout_alignTop="@+id/check"
        android:layout_alignBottom="@+id/check"
        android:maxLines="1"
        android:inputType="textCapWords"
        android:layout_marginStart="-3dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/colon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:layout_toEndOf="@id/editFood"
        android:layout_alignBottom="@+id/editFood"
        android:layout_alignTop="@+id/editFood"
        android:gravity="start|center"
        android:visibility="invisible"
        android:textSize="17sp"
        android:backgroundTint="@color/transparent"/>

    <EditText
        android:id="@+id/editAmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/colon"
        android:hint="amount"
        android:inputType="number"
        android:visibility="invisible"
        android:layout_alignTop="@+id/check"
        android:gravity="center"
        android:maxLines="1"
        android:layout_alignBottom="@+id/check"
        android:textColor="@color/white"/>

</RelativeLayout>