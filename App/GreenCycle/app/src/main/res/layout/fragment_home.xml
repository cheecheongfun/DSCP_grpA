<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Home.HomeFragment">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Home.HomeFragment"
    android:theme="@style/AppBackgroundColour">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/Theme.GreenCycle">

        <TextView
            android:id="@+id/helper"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />

        <!-- Welcome segment -->

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="348dp"
            android:src="@drawable/green_cycle_icon"
            app:civ_border_color="@color/mdtp_background_color"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/userWelcome"
            android:layout_width="272dp"
            android:layout_height="52dp"
            android:layout_alignTop="@+id/profileImageView"
            android:layout_alignBottom="@+id/profileImageView"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-2dp"

            android:layout_marginEnd="59dp"
            android:gravity="center_vertical"
            android:text="Welcome, User"
            android:textSize="20dp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/welcomeTab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/userWelcome"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:background="@drawable/rounded_corner_mid_green"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/mid_green"
                android:text="Next Day Predicted Energy"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:background="@drawable/rounded_corner_mid_green"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/mid_green"
                    android:gravity="center"
                    android:elevation="4dp"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/SOE"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="SOE"
                        android:textColor="@color/white"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/SOE_energy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="Energy Generated"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/mid_green"
                    android:gravity="center"
                    android:orientation="vertical"

                    android:padding="16dp">

                    <TextView
                        android:id="@+id/Estate"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="Estate"
                        android:textColor="@color/white"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/Estate_energy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:padding="8dp"

                        android:text="Energy Generated"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/sectionVermi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welcomeTab"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:text="Vermicompost"
            android:textSize="23dp"
            android:textStyle="bold" />

        <!-- First row of buttons and label, left to right -->
        <ImageButton
            android:id="@+id/liveDataButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/sectionVermi"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="60dp"
            android:layout_toStartOf="@+id/feedingLogButton"
            android:background="@drawable/home_page_buttons"
            android:elevation="2dp"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:theme="@style/LiveDataBtn" />

        <TextView
            android:id="@+id/liveDataText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/liveDataButton"
            android:layout_alignStart="@+id/liveDataButton"
            android:layout_alignEnd="@+id/liveDataButton"
            android:gravity="center"
            android:text="Live Data" />

        <ImageButton
            android:id="@+id/feedingLogButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/sectionVermi"
            android:layout_alignTop="@+id/liveDataButton"
            android:layout_centerHorizontal="true"
            android:background="@drawable/home_page_buttons"
            android:elevation="2dp"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:theme="@style/FeedingLogBtn" />

        <TextView
            android:id="@+id/feedingLogText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/feedingLogButton"
            android:layout_alignTop="@+id/liveDataText"
            android:layout_alignBottom="@+id/liveDataText"
            android:layout_toStartOf="@+id/analyticsText"
            android:layout_toEndOf="@+id/liveDataText"
            android:gravity="center"
            android:text="Feeding Log" />

        <ImageButton
            android:id="@+id/analyticsButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/sectionVermi"
            android:layout_alignTop="@+id/liveDataButton"
            android:layout_marginStart="60dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/feedingLogButton"
            android:background="@drawable/home_page_buttons"
            android:elevation="2dp"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:theme="@style/AnalyticsBtn" />

        <TextView
            android:id="@+id/analyticsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/analyticsButton"
            android:layout_alignStart="@+id/analyticsButton"
            android:layout_alignEnd="@+id/analyticsButton"
            android:gravity="center"
            android:text="Analytics" />

        <!-- Second row of buttons and labels, left to right -->

        <ImageButton
            android:id="@+id/goalsButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/liveDataText"
            android:layout_alignStart="@+id/liveDataButton"
            android:layout_marginStart="0dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/home_page_buttons"
            android:elevation="2dp"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:theme="@style/GoalsBtn" />

        <TextView
            android:id="@+id/goalsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/goalsButton"
            android:layout_alignStart="@+id/goalsButton"
            android:layout_alignEnd="@+id/goalsButton"
            android:gravity="center"
            android:text="Goals" />

        <ImageButton
            android:id="@+id/communityButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/feedingLogText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/home_page_buttons"
            android:elevation="2dp"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:theme="@style/CommunityBtn" />

        <TextView
            android:id="@+id/communityText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/communityButton"
            android:layout_alignStart="@+id/communityButton"
            android:layout_alignEnd="@+id/communityButton"
            android:gravity="center"
            android:text="Forum" />


        <ImageButton
            android:id="@+id/soilTypeButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignTop="@+id/goalsButton"
            android:layout_alignEnd="@+id/analyticsButton"
            android:background="@drawable/home_page_buttons"
            android:elevation="2dp"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:theme="@style/SoilBtn" />

        <TextView
            android:id="@+id/soilTypeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/soilTypeButton"
            android:layout_alignStart="@+id/soilTypeButton"
            android:layout_alignEnd="@+id/soilTypeButton"
            android:gravity="center"
            android:text="Soil Type" />

        <!-- Widget -->


        <!-- Solar Section -->

        <TextView
            android:id="@+id/sectionSolar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/goalsButton"
            android:layout_alignStart="@+id/sectionVermi"
            android:layout_alignEnd="@+id/sectionVermi"
            android:layout_marginTop="30dp"
            android:text="Solar Panels"
            android:textSize="23dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/solarForecast"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/sectionSolar"
            android:layout_alignStart="@+id/goalsButton"
            android:layout_marginTop="15dp"
            android:background="@drawable/home_page_buttons"
            android:elevation="2dp"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:theme="@style/ForecastBtn" />

        <TextView
            android:id="@+id/solarText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/solarForecast"
            android:layout_alignStart="@+id/solarForecast"
            android:layout_alignEnd="@+id/solarForecast"
            android:gravity="center"
            android:text="Forecast" />

        <ImageButton
            android:id="@+id/insightsBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/sectionSolar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/home_page_buttons"
            android:elevation="2dp"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:theme="@style/CommunityBtn" />

        <TextView
            android:id="@+id/insightsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/insightsBtn"
            android:layout_alignStart="@+id/communityButton"
            android:layout_alignEnd="@+id/communityButton"
            android:gravity="center"
            android:text="Insights" />

        <ImageButton
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="6dp"
            android:backgroundTint="@color/transparent"
            android:src="@drawable/baseline_menu_24" />

        <ImageButton
            android:id="@+id/circleButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/baseline_change_circle_24"
            android:scaleType="fitCenter" />


    </RelativeLayout>
</FrameLayout>
    <include layout="@layout/nav_drawer"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_gravity="end" />
</androidx.drawerlayout.widget.DrawerLayout>