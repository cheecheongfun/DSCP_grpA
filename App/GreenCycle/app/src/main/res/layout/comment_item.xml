<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/comment_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/comment_content"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/comment_author"
        android:layout_alignStart="@id/comment_author"
        android:text="Comment content goes here" />

    <TextView
        android:id="@+id/comment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textSize="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="11dp"/>

    <ImageButton
        android:id="@+id/likeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/comment_date"
        android:layout_alignParentStart="true"
        android:layout_marginStart="327dp"
        android:layout_marginTop="6dp"
        android:backgroundTint="@android:color/transparent"
        app:srcCompat="@drawable/like_svgrepo_com" />

    <TextView
        android:id="@+id/likeCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/comment_date"
        android:layout_marginStart="-7dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/likeButton"
        android:text="0"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/replies_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comment_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="3dp"
        android:text="Reply"
        android:textSize="12dp"
        android:clickable="true"
        android:textColor="@color/dark_gray"/>

    <TextView
        android:id="@+id/view_replies_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/replies_text"
        android:layout_alignParentStart="true"
        android:layout_marginTop="1dp"
        android:clickable="true"
        android:focusable="true"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:text="View 10 more replies"
        android:textColor="@color/dark_gray"
        android:textSize="12dp"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/replies_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_replies_count"
        android:visibility="gone"/>

</RelativeLayout>
