<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="0dp"
    android:id="@+id/constraint"
    android:theme="@style/AppBackgroundColour"
    android:backgroundTint="@color/white"
    android:elevation="10dp"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp">
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:backgroundTint="@color/light_green"
        android:theme="@style/TankRecyclerCard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:backgroundTint="@color/light_green"
            >

            <!-- Achievement 1 -->
            <RelativeLayout
                android:id="@+id/achievement1_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:id="@+id/goal_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save 5KG of Food Waste"
                    android:textColor="@color/dark_green"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <!-- ImageView in top right -->
                <ImageView
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/black_baseline_delete_24"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:contentDescription="Image in top right"
                    />




                <!-- Reward Text -->
                <LinearLayout
                    android:id="@+id/reward_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/goal_title"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15 Days Left"
                        android:id="@+id/days_remaining"
                        android:textSize="14sp"
                        android:textColor="@color/dark_green"
                        android:layout_marginTop="4dp"/>


                </LinearLayout>

            </RelativeLayout>

            <!-- Linear Progress Bar -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="8dp">

                <!-- Your progress bar and related views go here -->
                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="20"
                    android:progressDrawable="@drawable/customer_progress"/>

                <!-- Progress Text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:id="@+id/progress_text"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="20/100"
                    android:backgroundTint="@color/transparent"
                    android:textSize="12sp" />


            </RelativeLayout>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>