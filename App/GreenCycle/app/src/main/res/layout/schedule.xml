<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppBackgroundColour">

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/foodText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/radioButton"
        android:text="Schedule Name"
        android:layout_alignTop="@+id/radioButton"
        android:layout_alignBottom="@+id/radioButton"
        android:gravity="center"
        android:textSize="20sp"
        android:visibility="visible"/>


    <TextView
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:drawableStart="@drawable/outline_delete_24"
        android:visibility="visible"
        android:theme="@style/DrawableTint"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/foodText3"
        android:layout_marginEnd="5dp"
        />

    <RelativeLayout
        android:id="@+id/scheduleDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foodText3"
        android:layout_alignStart="@+id/foodText3"
        android:visibility="visible"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/greens"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Greens: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/browns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/greens"
            android:layout_marginTop="5dp"
            android:text="Browns: "
            android:textSize="18sp" />

    </RelativeLayout>

</RelativeLayout>