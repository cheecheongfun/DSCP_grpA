<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/TankRecyclerCard">

    <CheckBox
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/foodText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/check"
        android:text="Schedule Name"
        android:layout_alignTop="@+id/check"
        android:layout_alignBottom="@+id/check"
        android:gravity="center"
        android:textSize="20sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/foodText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/radioButton"
        android:text="Schedule Name"
        android:layout_alignTop="@+id/radioButton"
        android:layout_alignBottom="@+id/radioButton"
        android:gravity="center"
        android:textSize="20sp"
        android:visibility="visible"/>

</RelativeLayout>