<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/AppBackgroundColour">


    <TextView
        android:id="@+id/selectedDate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_page_buttons"
        android:backgroundTint="@color/transparent"
        android:layout_margin="15dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/dayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/transparent"
        android:text="22"/>

    <TextView
        android:id="@+id/scheduleIndicator"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_below="@+id/dayText"
        android:layout_alignStart="@+id/dayText"
        android:layout_alignEnd="@+id/dayText"
        android:drawableTop="@drawable/baseline_circle_24"
        android:drawableTint="@color/icon_brown_dark"
        android:backgroundTint="@color/transparent"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/logIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dayText"
        android:layout_alignStart="@+id/dayText"
        android:layout_alignEnd="@+id/dayText"
        android:drawableTop="@drawable/baseline_circle_24"
        android:drawableTint="@color/mid_green"
        android:backgroundTint="@color/transparent"
        android:visibility="gone"/>
</RelativeLayout>
