<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GreenCycle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mid_green</item>
        <item name="colorPrimaryVariant">@color/light_green</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_green</item>
        <item name="colorSecondaryVariant">@color/dark_green</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.GreenCycle" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="ButtonHome" parent="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Secondary">
        <item name="colorAccent">@color/dark_green</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Sets the App Background Colour -->
    <style name="AppBackgroundColour">
        <item name="android:background">#11161C</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="fontFamily">sans-serif-condensed-medium</item>
    </style>

    <!-- Tank list cards -->
    <style name="TankRecyclerCard">
        <item name="android:background">@drawable/tank_card_dark</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="fontFamily">sans-serif-condensed-medium</item>
    </style>

    <!-- Basic drawables (black/white) -->
    <style name="DrawableTint">
        <item name="drawableTint">@color/white</item>
    </style>

    <!-- Search View -->
    <style name="Search" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorHint">#FFFFFF</item>
        <item name="tint">#FFFFFF</item>
        <item name="fontFamily">sans-serif-condensed-medium</item>
        <item name="background">@drawable/search_view_white</item>
    </style>

    <!-- Resource Search View -->
    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawableTint">@color/black</item>
    </style>

    <!-- Custom DatePicker theme -->
    <style name="CustomDatePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">@color/main_background</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:datePickerMode">calendar</item>
        <item name="android:textColorPrimaryInverse">@color/black</item> <!-- Set the text color for selected date -->
    </style>

    <!-- Bottom Page for Feeding Log -->
    <style name="FeedingLogBottom">
        <item name="android:background">@drawable/top_rounded</item>
        <item name="android:backgroundTint">#11161C</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="layout">
        <item name="android:background">@drawable/main_color_rounded</item>
    </style>

    <style name="textcolor">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Border -->
    <style name="Border">
        <item name="android:background">@drawable/search_view_black</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <!-- Number Picker -->
    <style name="WidgetPicker">
        <item name="fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/textColour</item>
    </style>


    <!-- Home buttons-->

    <!-- Live Data-->
    <style name="LiveDataBtn">
        <item name="android:backgroundTint">@color/icon_brown_dark</item>
        <item name="android:src">@drawable/outline_bigtop_updates_24_light</item>
    </style>
    <!-- Feeding Log-->
    <style name="FeedingLogBtn">
        <item name="android:backgroundTint">@color/icon_brown_dark</item>
        <item name="android:src">@drawable/outline_coffee_24_light</item>
    </style>
    <!-- Image Log-->
    <style name="ImageLogBtn">
        <item name="android:backgroundTint">@color/icon_brown_dark</item>
        <item name="android:src">@drawable/outline_image_search_24_light</item>
    </style>
    <!-- Analytics -->
    <style name="AnalyticsBtn">
        <item name="android:backgroundTint">@color/icon_brown_dark</item>
        <item name="android:src">@drawable/outline_analytics_24_light</item>
    </style>
    <!-- Goals -->
    <style name="GoalsBtn">
        <item name="android:backgroundTint">@color/icon_brown_dark</item>
        <item name="android:src">@drawable/outline_scoreboard_24_light</item>
    </style>
    <!-- Converter -->
    <style name="ConverterBtn">
        <item name="android:backgroundTint">@color/icon_brown_dark</item>
        <item name="android:src">@drawable/outline_calculate_24_light</item>
    </style>
    <!-- Community -->
    <style name="CommunityBtn">
        <item name="android:backgroundTint">@color/icon_brown_dark</item>
        <item name="android:src">@drawable/outline_forum_24_light</item>
    </style>
    <!-- Soil Type -->
    <style name="SoilBtn">
        <item name="android:backgroundTint">@color/icon_brown_dark</item>
        <item name="android:src">@drawable/outline_grass_24_light</item>
    </style>
    <!-- Solar Forecast -->
    <style name="ForecastBtn">
        <item name="android:backgroundTint">@color/icon_brown_dark</item>
        <item name="android:src">@drawable/outline_solar_power_24_light</item>
    </style>

    <!-- Resource filter by type -->
    <style name="ResourceFilter">
        <item name="android:backgroundTint">@color/mid_green</item>
    </style>

    <!-- Radio button for schedule -->
    <style name="OtherButtonTheme">
        <item name="colorAccent">@color/mid_green</item>
        <item name="android:textColorSecondary">@color/mid_green</item>
    </style>
</resources>
