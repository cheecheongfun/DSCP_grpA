<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GreenCycle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mid_green</item>
        <item name="colorPrimaryVariant">@color/light_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_green</item>
        <item name="colorSecondaryVariant">@color/dark_green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:background">@color/main_background</item>
        <item name="android:textColor">@color/textColour</item>
    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.GreenCycle" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="ButtonHome" parent="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Secondary">
        <item name="colorAccent">@color/light_green</item>
        <item name="android:textColor">@color/textColour</item>
        <item name="backgroundTint">#d4a373</item>
    </style>

    <!-- Sets the App Background Colour -->
    <style name="AppBackgroundColour">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/textColour</item>
        <item name="fontFamily">sans-serif-condensed-medium</item>
    </style>

    <!-- Tank list cards -->
    <style name="TankRecyclerCard">
        <item name="android:background">@drawable/tank_card_light</item>
        <item name="android:textColor">@color/textColour</item>
        <item name="fontFamily">sans-serif-condensed-medium</item>
    </style>

    <!-- Basic drawables (black/white) -->
    <style name="DrawableTint">
        <item name="drawableTint">@color/black</item>
    </style>

    <!-- Search view -->
    <style name="Search" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorPrimary">@color/textColour</item>
        <item name="android:textColorHint">@color/textColour</item>
        <item name="tint">@color/textColour</item>
        <item name="fontFamily">sans-serif-condensed-medium</item>
        <item name="background">@drawable/search_view_black</item>
    </style>

    <!-- Resource Search View -->
    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/grey_square_wth_rounded_corners</item>
        <item name="android:textColor">@color/textColour</item>
    </style>

    <!-- Custom DatePicker theme -->
    <style name="DatePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:datePickerDialogTheme">@style/CustomDatePickerDialog</item>
    </style>

    <style name="CustomDatePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">@color/main_background</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:datePickerMode">calendar</item>
        <item name="android:textColorPrimaryInverse">@color/black</item>
        <item name="android:background">@color/white</item> <!-- Set the text color for selected date -->
        <item name="android:buttonBarPositiveButtonStyle">@style/Button</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/Button</item>
    </style>
    <style name="Button" parent = "Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/textColour</item>
    </style>

    <style name="NoUnderlineHint" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="android:background">@null</item>
        <item name="colorControlActivated">@color/light_green</item>
        <item name="android:textColorPrimaryInverse">@color/black</item> <!-- Set the text color for selected date -->
    </style>

    <!-- Bottom Page for Feeding Log -->
    <style name="FeedingLogBottom">
        <item name="android:background">@drawable/top_rounded</item>
        <item name="android:backgroundTint">@color/main_background</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textColor">@color/textColour</item>
        <item name="android:buttonTint">@color/light_green</item>
    </style>

    <!-- Border -->
    <style name="Border">
        <item name="background">@drawable/search_view_black</item>
    </style>

    <style name="CustomSpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:dropDownSelector">?android:attr/selectableItemBackground</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="Theme.AppCompat.Dialog">
        <!-- Customize the theme attributes as needed -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowAnimationStyle">@style/PopupAnimation</item>
        <!-- Set the window layout to include app name -->
        <item name="android:windowActionBar">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowTitleStyle">@style/AppWindowTitle</item>
    </style>


    <style name="PopupAnimation" parent="@android:style/Animation.Dialog">
        <!-- Customize popup animation if desired -->
    </style>
    <style name="AppWindowTitle">
        <item name="android:textColor">@color/transparent</item>

    </style>

    <style name="AppBackgroundColour2">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/textColour</item>
        <item name="fontFamily">sans-serif-condensed-medium</item>
    </style>

    <style name="layout">
        <item name="android:background">@drawable/main_color_rounded</item>
    </style>

    <style name="AppBackgroundColour3">
        <item name="android:background">@color/main_background</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textcolor">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Basic drawables (black/white) -->
    <style name="HomePageButtons">
        <item name="android:backgroundTint">#faedcd</item>
        <item name="android:src"></item>
    </style>

    <!-- Number Picker -->
    <style name="WidgetPicker">
        <item name="fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/textColour</item>
    </style>


    <!-- Home buttons-->

    <!-- Live Data-->
    <style name="LiveDataBtn">
        <item name="android:backgroundTint">@color/icon_brown_light</item>
        <item name="android:src">@drawable/outline_bigtop_updates_24_dark</item>
    </style>
    <!-- Feeding Log-->
    <style name="FeedingLogBtn">
        <item name="android:backgroundTint">@color/icon_brown_light</item>
        <item name="android:src">@drawable/outline_coffee_24_dark</item>
    </style>
    <!-- Image Log-->
    <style name="ImageLogBtn">
        <item name="android:backgroundTint">@color/icon_brown_light</item>
        <item name="android:src">@drawable/outline_image_search_24_dark</item>
    </style>
    <!-- Analytics -->
    <style name="AnalyticsBtn">
        <item name="android:backgroundTint">@color/icon_brown_light</item>
        <item name="android:src">@drawable/outline_analytics_24_dark</item>
    </style>
    <!-- Goals -->
    <style name="GoalsBtn">
        <item name="android:backgroundTint">@color/icon_brown_light</item>
        <item name="android:src">@drawable/outline_scoreboard_24_dark</item>
    </style>
    <!-- Converter -->
    <style name="ConverterBtn">
        <item name="android:backgroundTint">@color/icon_brown_light</item>
        <item name="android:src">@drawable/outline_calculate_24_dark</item>
    </style>
    <!-- Community -->
    <style name="CommunityBtn">
        <item name="android:backgroundTint">@color/icon_brown_light</item>
        <item name="android:src">@drawable/outline_forum_24_dark</item>
    </style>
    <!-- Soil Type -->
    <style name="SoilBtn">
        <item name="android:backgroundTint">@color/icon_brown_light</item>
        <item name="android:src">@drawable/outline_grass_24_dark</item>
    </style>
    <!-- Solar Forecast -->
    <style name="ForecastBtn">
        <item name="android:backgroundTint">@color/icon_brown_light</item>
        <item name="android:src">@drawable/outline_solar_power_24_dark</item>
    </style>

    <!-- Resource filter by type -->
    <style name="ResourceFilter">
        <item name="android:backgroundTint">@color/light_green</item>
    </style>

    <!-- Alert dialog for feeding schedule list -->
    <style name="ScheduleList" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/transparent</item>
    </style>

    <!-- Radio button for schedule -->
    <style name="OtherButtonTheme">
        <item name="colorAccent">@color/textColour</item>
        <item name="android:textColorSecondary">@color/textColour</item>
    </style>
</resources>